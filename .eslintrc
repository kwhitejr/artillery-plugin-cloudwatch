{
  "extends": "airbnb/base",
  "env": {
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": [
    "json"
  ],
  "rules": {
    "no-use-before-define": 0,
    "no-param-reassign": 0,
    "func-style": 0,
    "arrow-body-style": 0,
    "comma-dangle": 0,
    "no-shadow": 0,
    "max-len": [
      "error",
      {
        "code": 200,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.spec.js",
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.spec.js"
      ],
      "rules": {
        "no-underscore-dangle": 0,
        "no-multi-assign": 0,
        "import/no-extraneous-dependencies": 0,
        "no-unused-expressions": 0,
        "no-unused-vars": 0
      }
    }
  ]
}